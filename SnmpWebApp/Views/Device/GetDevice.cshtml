@model SnmpWebApp.Models.DeviceViewModel

@{
    ViewData["Title"] = "Consultar Dispositivo";
}

<h2>Consultar Dispositivo SNMP</h2>

<form asp-action="GetDevice" method="post">
    <div>
        <label for="Ip">IP:</label>
        <input type="text" id="Ip" name="Ip" required />
    </div>
    <div>
        <label for="OID">OID:</label>
        <input type="text" id="OID" name="OID" value="@Model.OID" required />
    </div>
    <div>
        <button type="submit" name="action" value="consult">Consultar</button>
        <button type="submit" name="action" value="saveOnDataBase">Consultar e Gravar no banco</button>
    </div>
</form>


@if (Model?.Result != null)
{
    <div>
        <h3>Resultado:</h3>
        <p>@Model.Result</p>
    </div>
}
